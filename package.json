{
  "name": "nls-parcel-textscroll",
  "version": "1.0.0-1",
  "description": "React and ParcelJS Text Scroller",
  "main": "index.js",
  "repository": "https://github.com/nextlevelshit/nls-parcel-textscroll",
  "author": "Michael Czechowski <mail@dailysh.it>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "host": "parcel src/index.html --out-dir dist/debug --open --hmr-hostname 0.0.0.0:1234",
    "start": "parcel src/index.html --out-dir dist/debug --open",
    "build": "parcel build src/index.html --out-dir dist/release --public-url ./"
  },
  "staticFiles": {
    "staticPath": "src/static",
    "watcherGlob": "**"
  },
  "private": false,
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "posthtml-img-autosize": "^0.1.4",
    "posthtml-include": "^1.3.2",
    "sass": "^1.23.7",
    "tailwindcss": "^1.1.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-spring": "^8.0.27"
  }
}
